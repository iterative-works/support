#!/usr/bin/env bash
# PURPOSE: Pre-push hook that validates tests pass before allowing push to remote.
# PURPOSE: Blocks push if any unit tests fail, ensuring broken code doesn't reach the remote.

set -euo pipefail

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[0;33m'
NC='\033[0m' # No Color

echo -e "${YELLOW}Running tests before push...${NC}"
echo "This may take a few minutes."
echo ""

# Run all unit tests
if ! ./mill __.test 2>&1; then
    echo ""
    echo -e "${RED}╔════════════════════════════════════════════════════════════════╗${NC}"
    echo -e "${RED}║  PUSH BLOCKED: Tests are failing                               ║${NC}"
    echo -e "${RED}╠════════════════════════════════════════════════════════════════╣${NC}"
    echo -e "${RED}║                                                                ║${NC}"
    echo -e "${RED}║  Fix the failing tests before pushing.                         ║${NC}"
    echo -e "${RED}║                                                                ║${NC}"
    echo -e "${RED}║  To run tests:                                                 ║${NC}"
    echo -e "${RED}║    ./mill __.test                                              ║${NC}"
    echo -e "${RED}║                                                                ║${NC}"
    echo -e "${RED}║  To bypass this check (not recommended):                       ║${NC}"
    echo -e "${RED}║    git push --no-verify                                        ║${NC}"
    echo -e "${RED}║                                                                ║${NC}"
    echo -e "${RED}╚════════════════════════════════════════════════════════════════╝${NC}"
    exit 1
fi

echo ""
echo -e "${GREEN}✓ All tests passed${NC}"
exit 0
